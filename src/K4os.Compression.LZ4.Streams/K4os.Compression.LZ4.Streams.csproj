    <PackageIconUrl>https://github.com/MiloszKrajewski/K4os.Compression.LZ4/blob/master/doc/icon.png?raw=true</PackageIconUrl>
    <!--
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>../../K4os.snk</AssemblyOriginatorKeyFile>
    -->
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DocumentationFile>bin\Release\K4os.Compression.LZ4.Streams.xml</DocumentationFile>
  </PropertyGroup>
  <Import Project="..\..\Common.targets" />
  <ItemGroup>
    <ProjectReference Include="..\K4os.Compression.LZ4\K4os.Compression.LZ4.csproj" />
  </ItemGroup>
  <Import Project="..\..\.paket\Paket.Restore.targets" />
